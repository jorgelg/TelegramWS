
@{
    ViewBag.Title = "Telegram";
}

@section headerScripts{
}

<h2>Telegram</h2>


<p>Sesion persistente</p>


<div class="container">
    <div id="NoAuth">
        <div class="form-group">
            <label for="txtCodigo" class="control-label col-md-1">Codigo:</label>
            <div class="col-md-2">
                <input type="number" placeholder="Codigo" name="txtCodigo" id="txtCodigo" class="form-control" />
            </div>
            <div class="col-md-9"></div>
        </div>
        <div class="form-group">
            <button type="button" onclick="IniciarSesion()" id="btnAutenticar" disabled class="btn btn-info">Autenticar</button>
            <button id="boton" type="button" onclick="SolicitarCodigo()" class="btn btn-info">Solicitar</button>
        </div>
    </div>
    <div id="Authenticated" style="display:none;">
        <div class="form-group">
            <button type="button" onclick="CerrarSesion()" id="btnCerrarSesion" class="btn btn-info">Cerrar Sesión</button>
        </div>
    </div>
</div>
<div id="tabla" style="display:none;">
    <div class="row" style="margin:0px;">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#ListaDeContactos">Lista de Contactos</a></li>
            <li><a data-toggle="tab" href="#EnviarMensaje">Enviar Mensaje</a></li>
            <li><a data-toggle="tab" href="#ConversacionesActuales">Ver Conversaciones</a></li>
            <li><a data-toggle="tab" href="#EnviarArchivo">Enviar Archivo/Imagenes</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="tab-content">
            @Html.Partial("../Shared/Partials/ListaContactosNoModel")
            @Html.Partial("../Shared/Partials/EnviarMensaje")
            @Html.Partial("../Shared/Partials/VerConversacionesNoModel")
            @Html.Partial("../Shared/Partials/EnviarArchivo")
            @*@Html.Partial("../Shared/Partials/CerrarSesion")*@
        </div>
    </div>
</div>

<div class="row" id="EspacioMensaje">
</div>

@section footScripts{
    <script src="~/Scripts/UserDefined/Telegram/ServerSesion.js" type="text/javascript"></script>
}